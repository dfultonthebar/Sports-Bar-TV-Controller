# Environment Variables for Sports Bar TV Controller

# Database
DATABASE_URL="file:./dev.db"

# NFHS Network API (When available)
# Contact: support@nfhsnetwork.com or partnerships@nfhsnetwork.com
# See docs/NFHS_API_INTEGRATION.md for details
NFHS_API_KEY=your_nfhs_api_key_here
NFHS_API_SECRET=your_nfhs_api_secret_here
NFHS_API_BASE_URL=https://api.nfhsnetwork.com/v1

# ESPN API
# ESPN API is public and doesn't require authentication
# No environment variables needed

# MLB Stats API
# MLB Stats API is public and doesn't require authentication
# No environment variables needed

# Fox Sports API (If/when available)
FOX_SPORTS_API_KEY=your_fox_sports_api_key_here
FOX_SPORTS_API_SECRET=your_fox_sports_api_secret_here

# NBC Sports API (If/when available)
NBC_SPORTS_API_KEY=your_nbc_sports_api_key_here
NBC_SPORTS_API_SECRET=your_nbc_sports_api_secret_here

# YouTube API (For YouTube TV)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Application Settings
NODE_ENV=development
PORT=3001

# Fire TV Connection Settings
FIRETV_DEFAULT_PORT=5555
FIRETV_CONNECTION_TIMEOUT=30000
FIRETV_KEEP_ALIVE_INTERVAL=30000

# Logging
LOG_LEVEL=info
